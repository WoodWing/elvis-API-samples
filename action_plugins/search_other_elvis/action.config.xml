<?xml version="1.0" encoding="UTF-8"?>
<plugin>
	<info>
		<version>
			<pluginVersion>1.0</pluginVersion>
			<requiresAtLeast>2.6.1.550</requiresAtLeast>
		</version>
		<description>Search on another Elvis Server</description>
		<documentationUrl>http://elvis.tenderapp.com/kb/bundled-plugins/action-search-other-elvis-server</documentationUrl>
	</info>
	<action>
		<url>${pluginUrl}/index.html</url>
		<icon16Url>${pluginUrl}/icon16.png</icon16Url>
		<icon24Url>${pluginUrl}/icon24.png</icon24Url>

		<userInterface>
			<tab/>
		</userInterface>

		<menuAssignments>
			<menuAssignment id="applicationMenu" order="4"/>
			<menuAssignment id="toolBar" order="4"/>
		</menuAssignments>

		<requiredRoles>
			<role>ROLE_CUSTOM_SEARCH_LONDON_OFFICE</role>
		</requiredRoles>

		<messages>
			<entries locale="en_US">
				<entry key="button.label">Search Other Elvis</entry>
				<entry key="button.tooltip">Search for assets on another Elvis Server</entry>
				<entry key="title">Results Other Elvis</entry>
			</entries>
		</messages>

	</action>
</plugin>
