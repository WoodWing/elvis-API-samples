<?xml version="1.0" encoding="UTF-8"?>
<plugin>
	<info>
		<version>
			<pluginVersion>1.0</pluginVersion>
			<requiresAtLeast>2.6.1.550</requiresAtLeast>
		</version>
		<description>Searching in Flickr</description>
		<documentationUrl>http://elvis.tenderapp.com/kb/bundled-plugins/action-search-in-external-website</documentationUrl>
	</info>
	<action>
		<url>${pluginUrl}/index.html</url>
		<icon16Url>${pluginUrl}/icon16.png</icon16Url>
		<icon24Url>${pluginUrl}/icon24.png</icon24Url>

		<userInterface>
			<tab/>
		</userInterface>

		<menuAssignments>
			<menuAssignment id="applicationMenu" order="7"/>
			<menuAssignment id="toolBar" order="7"/>
		</menuAssignments>

		<requiredRoles>
			<role>ROLE_CUSTOM_SEARCH_FLICKR</role>
		</requiredRoles>

		<messages>
			<entries locale="en_US">
				<entry key="button.label">Flickr</entry>
				<entry key="button.tooltip">Search in Flickr</entry>
				<entry key="title">Results from Flickr</entry>
			</entries>
		</messages>

	</action>
</plugin>
